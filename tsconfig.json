{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",                      // ESM output
    "lib": ["ES2020"],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "types": ["node", "jest"]
  },
  "include": ["src", "tests"],
  "exclude": ["node_modules", "dist"]
}
